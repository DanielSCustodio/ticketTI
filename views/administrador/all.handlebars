<section>
  {{#if messages.delete-administrator}}
    <div class='message'>
      <span>{{messages.delete-administrator}}</span>
    </div>
  {{/if}}
  {{#if messages.create-administrator}}
    <div class='message'>
      <span>{{messages.create-administrator}}</span>
    </div>
  {{/if}}
  {{#if messages.error-privilege}}
    <div class='message-error'>
      <span>{{messages.error-privilege}}</span>
    </div>
  {{/if}}
  <table class='table'>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Username</th>
        <th>Administrador Geral</th>
        <th>Excluir</th>
    </thead>
    <tbody>
      {{#each administrators}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.Person.name}}</td>
          <td>{{this.username}}</td>
          <td>{{#if this.privilege}}Sim{{else}}NÃ£o{{/if}}</td>
          <td>
            <form action='/administrador/remove' method='post'>
              <input type='hidden' name='id' value='{{this.id}}' />
              <button type='submit' class="btn-delete"><i
                  class='bi bi-x-square'
                ></i></button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
    <p>{{adm}}</p>
  </table>
  {{#if privilege}}
    <a href="/administrador/cadastro" class="btn btn-table">Cadastar</a>
  {{/if}}
</section>