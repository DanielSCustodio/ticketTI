<section>
  {{#if messages.delete-ticket}}
    <div class='message'>
      <span>{{messages.delete-ticket}}</span>
    </div>
  {{/if}}
  {{#if messages.create-ticket}}
    <div class='message'>
      <span>{{messages.create-ticket}}</span>
    </div>
  {{/if}}
  {{#if messages.update-ticket}}
    <div class='message'>
      <span>{{messages.update-ticket}}</span>
    </div>
  {{/if}}
  {{#if messages.error-privilege}}
    <div class='message'>
      <span>{{messages.error-privilege}}</span>
    </div>
  {{/if}}
  <table class='table'>
    <thead>
      <tr>
        <th>ID</th>
        <th>Título</th>
        <th>Equipamento</th>
        <th>Departamento</th>
        <th>Data</th>
        <th>Início do atendimento</th>
        <th>Final do atendimento</th>
        <th>Solicitante</th>
        <th>Agente de suporte</th>
        <th>Editar</th>
        <th>Excluir</th>
    </thead>
    <tbody>
      {{#each tickets}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.title}}</td>
          <td>{{this.Equipment.name}}</td>
          <td>{{this.Departament.name}}</td>
          <td>{{this.date}}</td>
          <td>{{this.startTime}}</td>
          <td>{{this.endTime}}</td>
          <td>{{this.Person.name}}</td>
          <td>{{AdministratorName}}</td>
          <td>
            <a href='/ticket/editar/{{this.id}}' class='btn'><i
                class='bi bi-pencil-square'
              ></i></a>
          </td>
          <td>
            <form action='/ticket/remove' method='post'>
              <input type='hidden' name='id' value='{{this.id}}' />
              <button type='submit' class='btn'><i
                  class='bi bi-x-square'
                ></i></button>
            </form></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{#if privilege}}
    <a href="/ticket/cadastro">Cadastar</a>
  {{/if}}

</section>