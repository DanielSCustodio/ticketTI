<section class='form-conatiner'>
  {{#if messages.error-input-name}}
    <div class='message-error'>
      <span>{{messages.error-input-name}}</span>
    </div>
  {{/if}}
  <form action='/setor/edit' method='POST' class='form'>
    <input type="hidden" name="id" value="{{departament.id}}">
    <div class='form-control'>
      <label for='name'>Setor:</label>
      <input id='name' type='text' name='name' placeholder='Nome do setor'  value="{{departament.name}}"/>
    </div>
    <div class="btn-submit">
      <input type='submit' value='Atualizar' class='btn' />
    </div>
  </form>
</section>